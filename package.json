{
  "name": "candyapp",
  "version": "1.0.0",
  "description": "Private app for calculate orders",
  "author": "Dũng Trần Mạnh",
  "main": "electron/dist/main.js",
  "scripts": {
    "build:frontend": "cd frontend && npm install && npm run build",
    "build:backend": "cd backend && npm install && npm run build",
    "build:electron:ts": "tsc -p electron/tsconfig.electron.json",
    "build:electron": "npm run build:electron:ts && electron-builder",
    "build:all": "npm run build:frontend && npm run build:backend",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\" \"npm run dev:electron\"",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "cd backend && npm run start:dev",
    "dev:electron": "cd electron && ts-node main.ts"
  },
  "build": {
    "appId": "com.candy.app",
    "productName": "CandyApp",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "frontend/dist/**/*",
      "backend/dist/**/*",
      "electron/dist/**/*"
    ],
    "win": {
      "target": "nsis"
    },
    "publish": {
      "provider": "github"
    }
  },
  "devDependencies": {
    "concurrently": "^8.0.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.0.0",
    "prettier": "^3.5.3",
    "ts-node": "^10.0.0"
  }
}
